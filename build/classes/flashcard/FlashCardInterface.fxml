<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="flashcard.FlashCardInterfaceController">
   <children>
      <ImageView fitHeight="820.0" fitWidth="1212.0" layoutX="-117.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@pexels-photo-414102.jpeg" />
         </image>
      </ImageView>
      <Label alignment="CENTER" layoutX="247.0" layoutY="121.0" prefHeight="66.0" prefWidth="640.0" style="-fx-background-color: #DABED4;" text="Flash card">
         <font>
            <Font name="System Bold Italic" size="36.0" />
         </font>
         <effect>
            <InnerShadow>
               <input>
                  <DropShadow>
                     <input>
                        <Reflection />
                     </input>
                  </DropShadow>
               </input>
            </InnerShadow>
         </effect>
      </Label>
      <Button fx:id="CreateCard" layoutX="420.0" layoutY="344.0" mnemonicParsing="false" onAction="#CreateAction" prefHeight="50.0" prefWidth="294.0" text="Create card">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <effect>
            <DropShadow />
         </effect></Button>
      <Button fx:id="PlayCard" layoutX="420.0" layoutY="460.0" mnemonicParsing="false" onAction="#PlayAction" prefHeight="50.0" prefWidth="294.0" text="Play card">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <effect>
            <DropShadow />
         </effect></Button>
      <Button fx:id="ExtitCard" layoutX="420.0" layoutY="577.0" mnemonicParsing="false" onAction="#ExtitAction" prefHeight="50.0" prefWidth="294.0" text="Exit">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <effect>
            <DropShadow />
         </effect></Button>
   </children>
</AnchorPane>
